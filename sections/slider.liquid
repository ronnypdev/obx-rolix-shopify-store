<section class="slider">
    <div class="glide">
        <div class="glide__track" data-glide-el="track">
            <ul class="glide__slides">
                <li class="glide__slide glide__slide--relative">
                    <a class="slide__link" href="#">
                        <img class="slide__img" src="{{ 'hero-1.jpg' | asset_img_url: 'x637' }}" alt="">
                    </a>
                    <div class="slide__content">
                        <p class="slide__banner">{{ 'slider_section.slide_1.title' | t }}</p>
                    </div>
                </li>
                <li class="glide__slide glide__slide--relative">
                    <a class="slide__link" href="#">
                        <img class="slide__img" src="{{ 'hero-2.jpg' | asset_img_url: 'x637' }}" alt="">
                    </a>
                    <div class="slide__content">
                        <p class="slide__banner">{{ 'slider_section.slide_2.title' | t }}</p>
                    </div>
                </li>
                <li class="glide__slide glide__slide--relative">
                    <a class="slide__link" href="#">
                        <img class="slide__img" src="{{ 'hero-3.jpg' | asset_img_url: 'x637' }}" alt="">
                    </a>
                    <div class="slide__content">
                        <p class="slide__banner">{{ 'slider_section.slide_3.title' | t }}</p>
                    </div>
                </li>
            </ul>
        </div>
        <!-- end slide section -->

        <div class="glide__arrows" data-glide-el="controls">
            <button class="glide__arrow glide__arrow--left" data-glide-dir="<">
                {% include 'inline-icon' with svg: 'icon-arrow-left.svg', alt: 'Previous', class: 'current-color-stroke' %}
            </button>
            <button class="glide__arrow glide__arrow--right" data-glide-dir=">">
                {% include 'inline-icon' with svg: 'icon-arrow-right.svg', alt: 'Next', class: 'current-color-stroke' %}
            </button>
        </div>
        <!-- end arrows section -->

        <div class="glide__bullets" data-glide-el="controls[nav]">
            <button class="glide__bullet" data-glide-dir="=0"></button>
            <button class="glide__bullet" data-glide-dir="=1"></button>
            <button class="glide__bullet" data-glide-dir="=2"></button>
        </div>
        <!-- end indicators section -->
    </div>
    <!-- end glide__slide -->
</section>
    <!-- end slider component  -->